import java.util.Scanner;

class Problem5 { 
    public static void main(String[] args) { 
     int n = 3; 
      //we have declared the length of row and column of 3
        for(int i=1;i<=n;i++)
        {
            for(int j=1;j<=i;j++)
            {
                System.out.print("* ");
            }
            System.out.println();  
        }
        
    }
}
